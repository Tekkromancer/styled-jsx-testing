{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "filenames"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "browser": true,
    "expect": false,
    "sinon": false,
    "SSR_ONLY": false
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "rules": {
    "arrow-body-style": [0],
    "arrow-parens": 0,
    "camelcase": 0,
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "no-undef": 0,
    //    "filenames/match-regex": [2, "^[A-Z_]+(.i?stories)?$", true],
    //    "filenames/match-exported": [ 2, "snake" ],
    //    "func-names": ["error", "as-needed"],
    "func-names": [0],
    "generator-star-spacing": [0],
    "global-require": [0],
    "import/extensions": [0],
    "import/no-extraneous-dependencies": [0],
    "import/no-unresolved": [0], // Until import plugin supports webpack 2 resolveModules
    "import/no-named-as-default": 0,
    "import/no-dynamic-require": 0,
    "import/no-named-as-default-member": 0,
    "import/prefer-default-export": [0],
    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/label-has-for": 0,
    "max-len": ["error", 200, 4, { "comments": 120 }],
    "no-alert": ["error"],
    "no-console": ["error",  { allow: ["error"] }],
    "no-mixed-operators": 0,
    "no-multi-spaces": ["error", { exceptions: {
      "ImportDeclaration": true,
      "VariableDeclarator": true
    }}],
    "no-param-reassign": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-use-before-define": 0,
    "no-restricted-properties": 0,
    "no-plusplus": 0,
    "object-curly-newline": 0,
    "object-curly-spacing": 0,
    "prefer-destructuring": 0,
    "react/forbid-prop-types": [2, { "forbid": ["any", "array"] }],
    "react/no-array-index-key": 0,
    "react/no-danger": 0,
    "react/jsx-curly-brace-presence": 0,
    "react/jsx-no-bind": [0],
    "react/jsx-filename-extension": [0],
    "react/prefer-stateless-function": 0,
    "react/react-in-jsx-scope": [0],
    "react/sort-comp": ["error", {
      order: [
        "static-methods",
        "lifecycle",
        "/^on.+$/",
        "everything-else",
        "/^render.+$/",
        "render"
      ]
    }],
    "react/no-multi-comp": 0
  }
}
